            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Nitrogen (N)"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNitrogen"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rectangle_shape"
                    android:hint="Enter the Value (exapmle:50)"
                    android:gravity="center"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tvPhosphorus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Phosphorous (P)"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPhosphorus"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_shape"
                    android:hint="Enter the Value (exapmle:50)"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tvPotassium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Pottasium (k)"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPotassium"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:background="@drawable/rectangle_shape"
                    android:hint="Enter the Value (exapmle:50)"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tvCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Select Crop"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spStates"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_shape" />

                <Button
                    android:id="@+id/btnPredict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#39ff14"
                    android:text="Let's Predict"
                    android:textColor="@color/black"/>


            </LinearLayout>


<!--        </androidx.cardview.widget.CardView>-->


